{
  "name": "identity-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/identity-service/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "defaultConfiguration": "development",
      "options": {
        "main": "apps/identity-service/src/main.ts",
        "outputFileName": "main.js",
        "tsConfig": "apps/identity-service/tsconfig.app.json",
        "target": "node",
        "compiler": "tsc",
        "webpackConfig": "apps/identity-service/webpack.config.js",
        "deleteOutputPath": true
      },
      "configurations": {
        "production": {
          "outputPath": "apps/identity-service/dist/production",
          "optimization": true,
          "generatePackageJson": true,
          "generateLockfile": true
        },
        "development": {
          "outputPath": "apps/identity-service/dist/development",
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "identity-service:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "identity-service:build:production",
          "inspect": false,
          "watch": false,
          "waitUntilTargets": [
            "identity-service:build:production"
          ]
        },
        "development": {
          "buildTarget": "identity-service:build:development",
          "inspect": true,
          "watch": true,
          "waitUntilTargets": [
            "identity-service:build:development"
          ]
        }
      }
    },
    "versioning": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "HEAD:main",
        "syncVersions": false,
        "noVerify": false,
        "push": true,
        "remote": "origin",
        "tag": true,
        "tagFormat": "${projectName}-${version}",
        "changelog": true,
        "changelogFile": "CHANGELOG.md",
        "parallel": false
      },
      "dependsOn": [
        "build"
      ]
    },
    "docker": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -f apps/{projectName}/Dockerfile -t deigma/{projectName}:latest ."
        ],
        "parallel": false
      },
      "dependsOn": [
        "build"
      ]
    }
  },
  "tags": []
}