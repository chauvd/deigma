  "scripts": {
    "start:identity-service": "nx serve identity-service",
    "start:all": "nx run-many --target=serve --projects=identity-service --parallel",
    "build:identity-service": "nx build identity-service",
    "build:all": "nx run-many --target=build --configuration=production --projects=identity-service --parallel",
    "lint:identity-service": "nx lint identity-service",
    "lint:all": "nx run-many --target=lint --all",
    "docker:build:all": "nx run-many --target=docker --configuration=production --projects=identity-service",
    "docker:build:identity-service": "nx run identity-service:docker",
    "docker:run": "pnpm run build:all && pnpm run docker:stop && docker-compose -f ./tools/docker/docker-compose.yaml build --no-cache && docker-compose -f ./tools/docker/docker-compose.yaml up -d",
    "docker:stop": "docker-compose -f ./tools/docker/docker-compose.yaml down"
