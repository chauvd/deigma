{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "es2022",
    "paths": {
      "@deigma/configuration": [
        "packages/infrastructure/configuration/src/index.ts"
      ],
      "@deigma/logging": [
        "packages/infrastructure/logging/src/index.ts"
      ],
      "@deigma/observability": [
        "packages/infrastructure/observability/src/index.ts"
      ],
      "@deigma/domain": [
        "packages/shared/domain/src/index.ts"
      ],
      "@deigma/dtos": [
        "packages/shared/dtos/src/index.ts"
      ],
      "@deigma/mapper": [
        "packages/shared/mapper/src/index.ts"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}