{
    "root": true,
    "plugins": [
        "@nx",
        "unused-imports",
        "@typescript-eslint"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:@nx/typescript"
            ],
            "rules": {
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "enforceBuildableLibDependency": true,
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "*",
                                "onlyDependOnLibsWithTags": [
                                    "*"
                                ]
                            }
                        ]
                    }
                ],
                "unused-imports/no-unused-imports": "error",
                "unused-imports/no-unused-vars": [
                    "error",
                    {
                        "vars": "all",
                        "varsIgnorePattern": "^_",
                        "args": "all",
                        "argsIgnorePattern": "^_"
                    }
                ],
                "@typescript-eslint/no-unused-vars": [
                    "error",
                    {
                        "vars": "all",
                        "args": "after-used",
                        "argsIgnorePattern": "^_",
                        "varsIgnorePattern": "^_"
                    }
                ]
            }
        },
        {
            "files": [
                "*.spec.ts",
                "*.spec.tsx",
                "*.spec.js",
                "*.spec.jsx"
            ],
            "env": {
                "jest": true
            },
            "rules": {
                "@typescript-eslint/no-explicit-any": "off",
                "@typescript-eslint/no-unused-vars": "off"
            }
        }
    ]
}